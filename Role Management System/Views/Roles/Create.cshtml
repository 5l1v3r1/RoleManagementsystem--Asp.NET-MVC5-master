@model Role_Management_System.DataServices.webpages_Roles

@{
    ViewBag.Title = "Rol Oluştur";

}
<!DOCTYPE html>
<html lang="tr">

<head>

    <!-- Custom fonts for this template-->
    <link href="~/vendor/fontawesome-free/css/all.min.css" rel="stylesheet" type="text/css">

    <!-- Custom styles for this template-->
    <link href="~/css/sb-admin.css" rel="stylesheet">

</head>

<body class="page-top">



    <div class="card mt-4 mb-3 ">
        <div class="card-header">Rol Oluştur</div>
        <div class="card-body">

            @using (Html.BeginForm())
            {
                @Html.AntiForgeryToken()



                @Html.ValidationSummary(true)
                <div class="form-group">
                    <div class="form-row">
                        @Html.LabelFor(model => model.RoleName)

                        <div class="col-md-6">
                            <div class="form-group">
                                @Html.TextBoxFor(model => model.RoleName, new { @class = "form-control" })
                                @Html.ValidationMessageFor(model => model.RoleName)
                            </div>
                        </div>
                    </div>
                </div>

                <div class="form-group">
                    <div class="col-md-6">
                        <input type="submit" value="Kaydet" class="btn btn-primary" />
                        <button type="reset" onclick="window.history.back();" class="btn btn-dark">Hayır, geri dön</button>
                    </div>
                </div>

            }

         
        </div>
    </div>


    <!-- Bootstrap core JavaScript-->
    <script src="~/vendor/jquery/jquery.min.js"></script>
    <script src="~/vendor/bootstrap/js/bootstrap.bundle.min.js"></script>

    <!-- Core plugin JavaScript-->
    <script src="~/vendor/jquery-easing/jquery.easing.min.js"></script>
    <script src="~/Scripts/jquery.validate.min.js"></script>
    <script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>
</body>
</html>